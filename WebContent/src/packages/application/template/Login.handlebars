{{#if isLoggedIn}}

<p>
Welcome, {{name}}
</p>

{{else}}

{{#unless isValidLogin}}
<div class="text-error">Login not successful</div>
{{/unless}}

<div id="loginInput" class="form-inline">
	<label for="loginName" class="control-label">name</label>
	{{view view.LoginTextField valueBinding="name" id="loginName" }}
	<label for="loginPassword" class="control-label">password</label>
	{{view view.LoginTextField type="password" valueBinding="password" id="loginPassword"}}

	<button class="btn btn-small" {{ action "login" }}>
	Login
	</button>
</div>
{{/if}}