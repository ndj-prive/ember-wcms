{{#if isLoggedIn}}

<p>
Welcome, {{name}}
</p>

{{else}}

<div class="form-inline">
	{{#unless isValidLogin}}
	<p class="text-error">Login not successful</p>
	{{/unless}}
	
	{{view view.LoginTextField valueBinding="name" placeholder="name" classNames="input-small"}}
	{{view view.LoginTextField type="password" valueBinding="password" placeholder="password" classNames="input-small"}}

	<button class="btn btn-small" {{ action "login" }}>
	Login
	</button>
</div>

{{/if}}