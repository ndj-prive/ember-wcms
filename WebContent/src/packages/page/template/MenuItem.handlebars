{{#if view.isRenaming}}

{{view view.RenameTextField valueBinding="view.content.menuTitle"}}

{{else}}

<a {{ action "gotoShow" view.content href=true }}>
{{#if view.content.isHidden}}
*hidden*
{{/if}}
{{view.content.menuTitle}}
</a>

{{#if isLoggedIn}}

<div class="dropdown">
	<a class="btn btn-mini btn-link dropdown-toggle" id="menuItemOptionsDropdown" data-toggle="dropdown" href="">
		<span class="caret"></span>
	</a>

	<ul class="dropdown-menu" role="menu" aria-labelledby="menuItemOptionsDropdown">
		<li>
			<a href="" {{ action "enableRenameMenuTitle" target="view" }}>
			Rename
			</a>
		</li>
		<li>
			<a {{ action "gotoAdd" view.content href=true }}>
			Add
			</a>
		</li>
		<li>
			<a {{ action "gotoEdit" view.content href=true }}>
			Edit
			</a>
		</li>
		<li>
			<a {{ action "gotoDelete" view.content href=true }}>
			Delete
			</a>
		</li>
	</ul>
</div>
{{/if}}

{{/if}}

{{#if view.content.children}}
	{{view view.parentView.constructor contentBinding="view.content.children"}}
{{/if}}