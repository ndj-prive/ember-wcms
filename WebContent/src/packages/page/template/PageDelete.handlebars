{{#if currentPage.children}}
	<p>You can not delete a parent page containing children!</p>
{{else}}
	<p>
	Are you sure you want to delete page "{{currentPage.menuTitle}}"?
	</p>
	
	<button class="btn btn-primary" {{ action "confirm" }}>
	Confirm
	</button>
{{/if}}

<a class="btn" {{ action "gotoShow" currentPage href=true }}>
Back
</a>