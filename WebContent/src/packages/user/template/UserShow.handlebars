<div class="form-horizontal">
	<div class="control-group">
		<strong class="text-info">First name:</strong>
		{{currentUser.firstName}}
	</div>
	<div class="control-group">
		<strong class="text-info">Last name:</strong>
		{{currentUser.lastName}}
	</div>
	<div class="control-group">
		<strong class="text-info">E-mailaddress:</strong>
		{{currentUser.emailAddress}}
	</div>
	<div class="control-group">
		<strong class="text-info">Cellphone number:</strong>
		{{currentUser.cellphoneNumber}}
	</div>
	<div class="control-group">
		<strong class="text-info">Telephone number:</strong>
		{{currentUser.telephoneNumber}}
	</div>
	<div class="control-group">
		<strong class="text-info">Street and number:</strong>
		{{currentUser.streetAndNr}}
	</div>
	<div class="control-group">
		<strong class="text-info">Zipcode:</strong>
		{{currentUser.zipCode}}
	</div>
	<div class="control-group">
		<strong class="text-info">City:</strong>
		{{currentUser.city}}
	</div>
	<div class="control-group">
		<strong class="text-info">Birthdate:</strong>
		{{currentUser.birthDate}}
	</div>

	<div class="control-group">
		<div class="controls">
			<a class="btn btn-primary" {{ action "gotoEdit" currentUser href=true }}>
			Edit
			</a>
			<a class="btn btn-primary" {{ action "gotoDelete" currentUser href=true }}>
			Delete
			</a>
			<a class="btn" {{ action "gotoUsers" href=true }}>
			Back
			</a>
		</div>
	</div>
</div>