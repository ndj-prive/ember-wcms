{{#if isLoggedIn}}
<div class="btn-group dropdown">
    <button class="btn btn-small dropdown-toggle" id="adminNavigationDropdown" aria-haspopup="true" data-toggle="dropdown">
        Navigate <span class="caret"></span>
    </button>

    <ul class="dropdown-menu" aria-labelledby="adminNavigationDropdown">

        <li>{{#linkTo page}}Pages{{/linkTo}}</li>
        <li>{{#linkTo user}}Users{{/linkTo}}</li>
        <li><a href="" {{action "logout"}}>Logout</a></li>
    </ul>
</div>
{{/if}}
